# This is also a bash based file
# For Arch linux
export CHROME_EXECUTABLE=google-chrome-stable

# Log WLR errors and logs to the hyprland log. Recommended
export HYPRLAND_LOG_WLR=1

# Example IME Support: fcitx
export GTK_IM_MODULE=fcitx
export QT_IM_MODULE=fcitx
export XMODIFIERS=@im=fcitx
export SDL_IM_MODULE=fcitx
export GLFW_IM_MODULE=ibus

# System vars for a wayland session.
export LIBSEAT_BACKEND=logind
export SDL_VIDEODRIVER=wayland
export CLUTTER_BACKEND="wayland"
export GDK_BACKEND="wayland,x11"
# export GTK_THEME="FlatColor:dark"
export XCURSOR_THEME="GoogleDot-Black"

export XDG_SESSION_TYPE=wayland
export XDG_CURRENT_DESKTOP=Hyprland
export XDG_SESSION_DESKTOP=Hyprland

# export QT_QPA_PLATFORM="wayland;xcb"
export QT_QPA_PLATFORMTHEME="qt5ct"
# export QT_STYLE_OVERRIDE="gtk2"
# export QT_WAYLAND_FORCE_DPI=96
# export QT_WAYLAND_FORCE_DPI=physical
export QT_AUTO_SCREEN_SCALE_FACTOR=1
export QT_WAYLAND_DISABLE_WINDOWDECORATION=1

export _JAVA_AWT_WM_NONREPARENTING=1
export _JAVA_OPTIONS='-Dswing.defaultlaf=com.sun.java.swing.plaf.gtk.GTKLookAndFeel -Dawt.useSystemAAFontSettings=on' 

# Browser
export MOZ_ENABLE_WAYLAND=1

